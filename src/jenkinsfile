pipeline {
    agent any

    environment {
        // Load environment variables from the .env file
        MYSQL_DATABASE = 'devops-windows'
        MYSQL_ROOT_PASSWORD = 'root_password_here'
        DB_CONNECTION = 'mysql'
        DB_HOST = 'db'
        DB_PORT = '3306'
        DB_DATABASE = 'devops-windows'
        DB_USERNAME = 'root'
        DB_PASSWORD = 'root_password_here'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'docker-compose build'
            }
        }
        
        stage('Start Services') {
            steps {
                echo 'Starting services...'
                sh 'docker-compose up -d'
            }
        }
        
        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                sh 'docker-compose exec app vendor/bin/phpunit'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Add your deployment steps here
                // For example, you might use scp or rsync to transfer files
                sh 'scp -r ./src user@server:/path/to/deploy'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        always {
            echo 'Stopping services...'
            sh 'docker-compose down'
            echo 'Cleaning up...'
            cleanWs()
        }
    }
}
